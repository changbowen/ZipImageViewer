<UserControl x:Class="ZipImageViewer.Thumbnail" x:Name="TN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:ZipImageViewer" UseLayoutRounding="True" SnapsToDevicePixels="True"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" >
    <!--<UserControl.RenderTransform>
        <ScaleTransform/>
    </UserControl.RenderTransform>
    <UserControl.Style>
        <Style TargetType="UserControl">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Panel.ZIndex" Value="9999"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SB_ZoomIn}"/>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard Storyboard="{StaticResource SB_ZoomOut}"/>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>-->
    <UserControl.Resources>
        <local:FlagToImageConverter x:Key="FlagToImageConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.OpacityMask>
            <VisualBrush Visual="{Binding ElementName=mask}"/>
        </Grid.OpacityMask>
        <Border x:Name="mask" CornerRadius="10" Background="Black"/>
        <local:DpiImage Source="{Binding ElementName=TN, Path=ObjectInfo.ImageSource, Mode=OneWay}"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality" Stretch="UniformToFill"/>
        <fa:ImageAwesome VerticalAlignment="Top" HorizontalAlignment="Right" Width="32" Foreground="#AAFFFFFF" Margin="10"
                         Icon="{Binding ElementName=TN, Path=ObjectInfo.Flags, Converter={StaticResource FlagToImageConverter}}">
            <fa:ImageAwesome.Effect>
                <DropShadowEffect ShadowDepth="0"/>
            </fa:ImageAwesome.Effect>
        </fa:ImageAwesome>
        <!--<Border CornerRadius="8" BorderThickness="3"
                BorderBrush="{Binding ElementName=TN, Path=ObjectInfo.Flags, Converter={StaticResource FlagToBrushConverter}}"/>-->
    </Grid>
    
</UserControl>



