<UserControl x:Class="ZipImageViewer.Thumbnail" x:Name="TN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             xmlns:local="clr-namespace:ZipImageViewer" UseLayoutRounding="True" SnapsToDevicePixels="True"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" Loaded="TN_Loaded">
    <UserControl.Resources>
        <local:FlagToImageConverter x:Key="FlagToImageConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.OpacityMask>
            <VisualBrush Visual="{Binding ElementName=mask}"/>
        </Grid.OpacityMask>
        <Border x:Name="mask" CornerRadius="10" Background="#FF333333"/>
        <local:DpiImage x:Name="IM1" HorizontalAlignment="Center" VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality" Stretch="UniformToFill"
                        Source="{Binding ElementName=TN, Path=ObjectInfo.ImageSources[0], Mode=OneWay,
                                    TargetNullValue={x:Static local:Thumbnail.DefaultThumb},
                                    FallbackValue={x:Static local:Thumbnail.DefaultThumb}}"
                        ToolTip="{Binding ElementName=TN, Path=ObjectInfo.DebugInfo}"
                        ToolTipService.ShowDuration="20000"/>
        <fa:ImageAwesome VerticalAlignment="Top" HorizontalAlignment="Right" Width="48" Height="48" Margin="0 20 20 0" Foreground="#AAFFFFFF"
                         Icon="{Binding ElementName=TN, Path=ObjectInfo.Flags, Converter={StaticResource FlagToImageConverter}}"
                         Effect="{StaticResource DS_Below}">
        </fa:ImageAwesome>
    </Grid>
    
</UserControl>



