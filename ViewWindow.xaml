<Window x:Class="ZipImageViewer.ViewWindow" x:Name="ViewWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZipImageViewer" mc:Ignorable="d" 
        WindowStyle="None" AllowsTransparency="True" WindowState="Maximized"
        Title="ViewWindow" Height="600" Width="800" ResizeMode="CanResizeWithGrip"
        MouseDown="ViewWin_MouseDown" MouseUp="ViewWin_MouseUp" MouseWheel="ViewWin_MouseWheel"
        Opacity="0" SnapsToDevicePixels="True">
    <Window.Triggers>
        <EventTrigger RoutedEvent="Image.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SB_FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>
    <ScrollViewer x:Name="SV" Background="#FF464646"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                  PreviewMouseLeftButtonDown="SV_PreviewMouseLeftButtonDown"
                  PreviewMouseLeftButtonUp="SV_PreviewMouseLeftButtonUp"
                  PreviewMouseMove="SV_PreviewMouseMove">
        <Grid>
            <local:DpiImage x:Name="IM" Source="{Binding ElementName=ViewWin, Path=ImagePath, Mode=OneWay}"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <local:DpiImage.Effect>
                    <DropShadowEffect Direction="270" BlurRadius="30" ShadowDepth="15" Color="#FF2E2E2E"/>
                </local:DpiImage.Effect>
            </local:DpiImage>
            <TextBlock Text="{Binding ElementName=ViewWin, Path=ImagePath, Mode=OneWay}"
                       Margin="4" Foreground="Gray"/>
        </Grid>
    </ScrollViewer>
</Window>







